{
    "compilerOptions": {
        "outDir": "../js/", //输出路径
        "strict": true, //开启所有检查
        "strictNullChecks": false, //关闭null检查
        "noUnusedLocals": true, //检查未使用的局部变量
        "noUnusedParameters": true, //检查未使用的参数
        "newLine": "lf", //Unix风格换行
        "sourceMap": true, //调试信息
        "extendedDiagnostics": false, //详细的诊断信息
        "declaration": false, //生成声明文件
        "removeComments": true, //删除所有注释
        "module": "ES2020", //最新的模块
        "moduleResolution": "node", //模块解析方式为node
        "target": "ES2020", //生成最新版的ES
        //设置d.ts的根目录
        "typeRoots": [
            "node_modules/@types/"
        ],
        //启用的外部库
        "types": [
            //"jquery"
        ]
    },
    "files": [
        "pac.ts"
    ],
    //"include": [
    //    "**/*.ts"
    //],
    //"exclude": [
    //    "node_modules",
    //    "**/*.d.ts"
    //]
}